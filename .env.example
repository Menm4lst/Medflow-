# Configuración de Base de Datos
DATABASE_URL=sqlite:///./facturas.db

# Configuración de Email (SMTP)
# Para Gmail, Outlook, Office365, etc.
SMTP_HOST=smtp.office365.com
SMTP_PORT=587
SMTP_USER=tu_email@ejemplo.com
